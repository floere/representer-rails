<% unless collection.blank? -%>
<%- width = 66; breaker = '\n' -%>
<%= '-'*width + breaker -%>
<% collection.each do |item| -%>
<% presenter = presenter_for(item, self) -%>
<%- result = presenter.render_as(template_name) -%>
<%= '|' + "%-#{width}s"%(result[0,width]) + '|' -%>
<%- p ('|' + "%-#{width}s"%(result[0,width]) + '|') -%>
<%= breaker -%>
<%= separator || ">#{'-'*(width-2)}<#{breaker}" unless item == collection.entries.last -%>
<% end -%>
<%= '-'*width + breaker -%>
<% end -%>